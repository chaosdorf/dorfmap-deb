#!/bin/sh

NHOSTS="$(cat /srv/www/bgdata/hosts_dynamic)"

HTIME=1.4

if [ "${NHOSTS}" -lt 5 ]; then
	HTIME=1.8
elif [ "${NHOSTS}" -lt 10 ]; then
	HTIME=1.4
elif [ "${NHOSTS}" -lt 20 ]; then
	HTIME=1
elif [ "${NHOSTS}" -lt 40 ]; then
	HTIME=0.7
elif [ "${NHOSTS}" -lt 80 ]; then
	HTIME=0.5
fi

echo 1 > /tmp/feedback1/11
dorfmap_set_remote feedback1

sleep $HTIME

echo 0 > /tmp/feedback1/11
dorfmap_set_remote feedback1
