#!/bin/sh

cat /sys/class/thermal/thermal_zone0/temp > /srv/www/temperature

if [ -e /tmp/is_shutdown ]; then
	echo 1 > /srv/www/is_shutdown
else
	echo 0 > /srv/www/is_shutdown
fi


if [ "$(cat /srv/www/doorstatus)" = open ]; then
	echo 1 > /tmp/feedback2/bin5
	if [ -e /srv/www/stored.online_guests ]; then
		if [ "$(cat /srv/www/stored.online_guests)" -le 4 ]; then
			warnblink red &
		elif [ "$(cat /srv/www/stored.online_guests)" -le 8 ]; then
			warnblink yellow &
		fi
	fi
else
	echo 0 > /tmp/feedback2/bin5
fi
